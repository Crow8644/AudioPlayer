<Window x:Class="AudioPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#554D7A">
        <Slider Name="volume_slider" HorizontalAlignment="Left" Margin="123,0,0,40" VerticalAlignment="Bottom" Width="20" RenderTransformOrigin="0.5,0.5" Minimum="0" Maximum="100" Value="100" Height="110" Orientation="Vertical"/>
        <Button Name="play_pause_button" Content="Pause" HorizontalAlignment="Left" Height="45" Margin="40,0,0,40" VerticalAlignment="Bottom" Width="45" Click="play_pause_button_Click"/>
        <Button Name="stop_button" Content="Stop" HorizontalAlignment="Left" Height="45" Margin="40,0,0,105" VerticalAlignment="Bottom" Width="45" Click="stop_button_Click"/>
        <Slider Name="track_progress" HorizontalAlignment="Left" Height="28" Margin="184,0,0,40" VerticalAlignment="Bottom" Value="0" Width="570" Foreground="#26A5EB"/>
        <Button Name="file_select" Content="Select File" HorizontalAlignment="Left" Height="45" Margin="40,40,0,0" VerticalAlignment="Top" Width="116" Click="load_button_clicked"/>
        <Button Name="rewind_button" Content="Rewind" HorizontalAlignment="Left" Margin="184,284,0,0" VerticalAlignment="Top" Height="45" Width="45" Click="rewind_button_Click"/>
        <Button Name="foward_button" Content="Forward" HorizontalAlignment="Left" Margin="255,284,0,0" VerticalAlignment="Top" Height="45" Width="45" Click="foward_button_Click"/>
        <Label Name="file_name_display" Content="Unselected" HorizontalAlignment="Left" Height="28" Margin="329,22,0,0" VerticalAlignment="Top" Width="416"/>
    </Grid>
</Window>
